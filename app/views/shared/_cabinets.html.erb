<section class="page-section" id="contact">
  <div class="container">
    <section class="page-section bg-primary text-white mb-0" id="about">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% @cabinets = Cabinet.all%>
          <% @cabinets.each do |cab| %>
            <div class="col">
              <div class="card "  >
                <% if cab.photos.attached?%>
                  <% n =1 %>
                  <% cab.photos.each do |photo| %>
                    <% if n ==1%>
                      <%= cl_image_tag photo.key, height: 300, width: 200, crop: :fill ,class:"card-img-top", alt:"" %>
                      <% n = n+1%>
                    <%end%>
                  <% end %>
                <%else%>
                <img  src="https://res.cloudinary.com/dz83jh064/image/upload/v1631711846/P0D2394399G_j6qsx8.webp" class="card-img-top" alt="" style="height:300px; width:295px;" crop="fill">
                <%end%>
                <div class="card-body" >
                  <h5 class="card-title" style="color: black;"><%= cab.name.capitalize %></h5>
                  <p class="card-text" style="color: black; height:100px;"><%= cab.address %></p>
                  <a href="<%=pages_paris_path(cab)%>" class="btn btn-primary">Voir</a>
                  <% if current_user%>
                    <a href="<%= edit_cabinet_path(cab)%>" class="btn btn-primary">Modifier</a>
                    <a href="../pages/paris" class="btn btn-primary" method=":delete, data: { confirm: 'Are you sure?' }">Effacer</a>
                  <% end%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</section>
